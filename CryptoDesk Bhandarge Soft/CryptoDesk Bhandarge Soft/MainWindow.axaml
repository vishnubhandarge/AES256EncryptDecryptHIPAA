<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CryptoDesk_Bhandarge_Soft.ViewModels"
        x:Class="CryptoDesk_Bhandarge_Soft.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Bhandarge Soft CryptoDesk"
        Width="1150"
        Height="760"
        Padding="28"
        Background="#F5F6F8">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid RowDefinitions="Auto,Auto,*"
          RowSpacing="24">

        <!-- HEADER -->
        <StackPanel>
            <TextBlock Text="CryptoDesk"
                       FontSize="30"
                       FontWeight="SemiBold"/>
            <TextBlock Text="AES-GCM encryption utility"
                       Foreground="Gray"
                       FontSize="14"/>
        </StackPanel>

        <!-- KEY / IV CARD -->
        <Border Grid.Row="1"
                CornerRadius="18"
                Padding="20"
                Background="White"
                BorderBrush="#E2E2E2"
                BorderThickness="1">

            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="20">

                <TextBox Text="{Binding IVText}"
                         Height="44"
                         Watermark="IV (96-bit / 12 chars)"/>

                <TextBox Grid.Column="1"
                         Text="{Binding KeyText}"
                         Height="44"
                         Watermark="Key (256-bit / 32 chars)"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="28">

            <!-- INPUT -->
            <Border CornerRadius="22"
                    Padding="18"
                    Background="White"
                    BorderBrush="#E2E2E2"
                    BorderThickness="1">

                <StackPanel Spacing="12">
                    <TextBlock Text="Input"
                               FontSize="17"
                               FontWeight="SemiBold"/>

                    <TextBox Text="{Binding InputText}"
                             AcceptsReturn="True"
                             Height="280"/>
                </StackPanel>
            </Border>

            <!-- OUTPUT -->
            <Border Grid.Column="1"
                    CornerRadius="22"
                    Padding="18"
                    Background="White"
                    BorderBrush="#E2E2E2"
                    BorderThickness="1">

                <StackPanel Spacing="12">
                    <TextBlock Text="Output"
                               FontSize="17"
                               FontWeight="SemiBold"/>

                    <TextBox Text="{Binding OutputText}"
                             AcceptsReturn="True"
                             Height="280"
                             IsReadOnly="True"/>
                </StackPanel>
            </Border>

            <!-- ACTION BAR -->
            <Border Grid.ColumnSpan="2"
                    Margin="0,28,0,0"
                    Padding="18"
                    CornerRadius="26"
                    Background="White"
                    BorderBrush="#E2E2E2"
                    BorderThickness="1"
                    VerticalAlignment="Bottom">

                <Grid ColumnDefinitions="Auto,Auto,*,Auto"
                      ColumnSpacing="24"
                      VerticalAlignment="Center">

                    <!-- MODE -->
                    <!-- MODE TOGGLE -->
<StackPanel Orientation="Horizontal"
            Spacing="12"
            VerticalAlignment="Center">

    <TextBlock Text="Encrypt"
               VerticalAlignment="Center"
               FontSize="14"/>

    <ToggleSwitch IsChecked="{Binding IsDecryptMode}"
                  Width="50"
                  Height="24"/>

    <TextBlock Text="Decrypt"
               VerticalAlignment="Center"
               FontSize="14"/>

</StackPanel>


                    <!-- PRIMARY ACTION -->
                    <Button Grid.Column="3"
                            Width="160"
                            Height="48"
                            FontSize="16"
                            Content="{Binding ActionButtonText}"
                            Click="Action_Click">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.88"/>
                            </Style>
                        </Button.Styles>
                    </Button>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
